{
  "name": "checkthiscloud/crockford-random",
  "description": "A PHP library for generating Crockford Base32 random strings",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "CheckThisCloud"
    }
  ],
  "require": {
    "php": "^8.3"
  },
  "suggest": {
    "brick/math": "^0.11.0 || ^0.12.0 - Required for UniqueCrockfordPool with length > 12"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "phpstan/phpstan-strict-rules": "^2.0",
    "phpunit/phpunit": "^12.3"
  },
  "autoload": {
    "psr-4": {
      "CheckThisCloud\\CrockfordRandom\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CheckThisCloud\\CrockfordRandom\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpstan": "phpstan analyse",
    "check": [
      "@phpstan",
      "@test"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
